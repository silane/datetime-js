{
  "name": "@silane/datetime",
  "version": "1.2.1",
  "description": "Date and time library similar to Python's \"datetime\" package.",
  "type": "module",
  "module": "./src/index.js",
  "main": "./lib/index.cjs",
  "exports": {
    "import": "./src/index.js",
    "require": "./lib/index.cjs"
  },
  "scripts": {
    "test": "jest",
    "build": "npm run build:cjs && npm run build:browser",
    "build:cjs": "babel src --env-name node-cjs --out-dir lib --out-file-extension .cjs",
    "build:browser": "rollup -c"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/silane/datetime-js.git"
  },
  "keywords": [
    "datetime",
    "date",
    "time",
    "timedelta",
    "duration",
    "timezone",
    "python",
    "esmodule",
    "commonjs",
    "browser"
  ],
  "author": "silane",
  "files": [
    "package.json",
    "README.md",
    "LICENSE",
    "datetime.test.js",
    "jest.config.cjs",
    "babel.config.cjs",
    "rollup.config.js",
    "src/*",
    "lib/*",
    "umd/*"
  ],
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.0",
    "@babel/plugin-transform-modules-commonjs": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "babel-jest": "^27.4.2",
    "babel-plugin-replace-import-extension": "^1.1.2",
    "core-js": "^3.19.2",
    "jest": "^27.4.2",
    "rollup": "^2.60.2"
  }
}
